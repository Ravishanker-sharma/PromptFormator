{
  "manifest_version": 3,
  "name": "Prompt Formatter",
  "version": "1.0",
  "description": "Helper to format prompts in AI chats with Tab for spaces and shortcuts for Markdown.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Prompt Formatter"
  }
}
